# this file for deployment rulestxn
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rulestxn
  labels:
    run: rulestxn
spec:
  replicas: 1
  template:
    metadata:
      labels:
        run: rulestxn
    spec:
      containers:
      - name: rulestxn
        image: tnindo/rulestxn:v1stag.0.13
        imagePullPolicy: Always
        volumeMounts:
        - mountPath: /etc/supervisor/conf.d
          name: rules-vol
      restartPolicy: Always
      volumes:
      - name: rules-vol
        hostPath:
          path: /home/ubuntu/saving_cred/rules
      imagePullSecrets:
      - name: regsecret
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1
