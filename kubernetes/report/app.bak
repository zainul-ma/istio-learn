# this file for deployment report
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: report
  labels:
    run: report
spec:
  replicas: 1
  template:
    metadata:
      labels:
        run: report
    spec:
      containers:
      - name: report
        image: tnindo/report:v1stag.0.5
        imagePullPolicy: Always
        volumeMounts:
        - mountPath: /etc/supervisor/conf.d
          name: report-vol
      restartPolicy: Always
      volumes:
      - name: report-vol
        hostPath:
          path: /home/ubuntu/saving_cred/report
      imagePullSecrets:
      - name: regsecret
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1
